<Window x:Class="Notebook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notebook"
        mc:Ignorable="d"
        Title="RTF Notebook" Height="450" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="11*"/>
        </Grid.ColumnDefinitions>
        <!--"<TextBox Name = "Notes" Text="Your text here..." TextWrapping="Wrap" Margin="0,50,0,100" TextChanged="TextBox_TextChanged" Grid.ColumnSpan="2"/> changed to RichTextBox -->
        <Button Name = "SaveBTN" Content="Save" HorizontalAlignment="Left" VerticalAlignment="Top" Height="50" Width="300" Click="Button_Click"/>
        <Button Name ="LoadBTN" Content="Load" HorizontalAlignment="Left" Margin="300,0,0,0" VerticalAlignment="Top" Height="50" Width="300" Click="LoadBTN_Click" Grid.ColumnSpan="2"/>
        <TextBox x:Name="TextB" HorizontalAlignment="Left" Margin="0,50,0,0" Text="Your text here..." TextWrapping="Wrap" VerticalAlignment="Top" Width="600" Grid.ColumnSpan="2" Height="384" FontFamily="Comic Sans MS" AcceptsTab="True" AcceptsReturn="True" TextChanged="TextB_TextChanged"/>

    </Grid>
</Window>
